@model MisProvincias.Models.ViewModelss.ProvinciaVM
@{
    ViewData["Title"] = "Provincia_Detalle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.ObProvincia.IdProvincia == 0)
{
    <h1 class="text-center">Crear Provincia</h1>
}
else
{
    <h1 class="text-center">Editar Provincia</h1>
}

<div class="row justify-content-center">
    <div class="col-sm-6">
        <form asp-action="Provincia_Detalle" asp-controller="Home" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="ObProvincia.IdProvincia" />

            <!-- Provincia -->
            <div class="mb-3 text-center">
                <label asp-for="ObProvincia.Nombre" class="form-label d-block">
                    Provincia <span class="text-danger">*</span>
                </label>
                <input asp-for="ObProvincia.Nombre" class="form-control form-control-sm w-75 mx-auto" />
                <span asp-validation-for="ObProvincia.Nombre" class="text-danger"></span>
            </div>

            <!-- Capital -->
            <div class="mb-3 text-center">
                <label asp-for="ObProvincia.Capital" class="form-label d-block">
                    Capital <span class="text-danger">*</span>
                </label>
                <input asp-for="ObProvincia.Capital" type="text" class="form-control form-control-sm w-75 mx-auto" />
                <span asp-validation-for="ObProvincia.Capital" class="text-danger"></span>
            </div>

            <!-- Animal -->
            <div class="mb-3 text-center">
                <label asp-for="ObProvincia.IdAnimal" class="form-label d-block">
                    Animal <span class="text-danger">*</span>
                </label>
                <select asp-for="ObProvincia.IdAnimal"
                        asp-items="@Model.ObListaAnimales"
                        class="form-select form-select-sm w-75 mx-auto">
                    <option value="">--SELECCIONAR--</option>
                </select>
                <span asp-validation-for="ObProvincia.IdAnimal" class="text-danger"></span>
            </div>

            <!-- Planta -->
            <div class="mb-3 text-center">
                <label asp-for="ObProvincia.IdPlanta" class="form-label d-block">
                    Planta <span class="text-danger">*</span>
                </label>
                <select asp-for="ObProvincia.IdPlanta"
                        asp-items="@Model.ObListaPlantas"
                        class="form-select form-select-sm w-75 mx-auto">
                    <option value="">--SELECCIONAR--</option>
                </select>
                <span asp-validation-for="ObProvincia.IdPlanta" class="text-danger"></span>
            </div>

            <!-- Botones -->
            <div class="text-center mt-3">
                @if (Model.ObProvincia.IdProvincia == 0)
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Cargar</button> 
                }
                else
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Actualizar</button> 
                }

                <a class="btn btn-dark btn-sm ms-2" asp-action="Index" asp-controller="Home">Volver</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
