@model MisProvincias.Models.Provincia

@{
    ViewData["Title"] = "Eliminar Provincia";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center mt-5">
    <div class="col-sm-6">
        <div class="card shadow-sm border-0">
            <div class="card-body text-center">
                <h4 class="mb-4">
                    ¿Seguro que querés dar de baja la provincia
                    <span class="text-danger fw-semibold">@Model.Nombre</span>?
                </h4>

                <form asp-action="EliminarConfirmado" method="post" class="mt-3">
                    <input type="hidden" asp-for="IdProvincia" />
                    <button type="submit" class="btn btn-outline-danger me-2 px-4">
                        Sí, dar de baja
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary px-4">
                        Volver
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>
